<html>
    <head>
        <title>
        Images Result Page
        </title>
        <!-- CSS only -->
        <style>
         
          </style>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    </head>
    <body>

      <div class="jumbotron text-center" style="background: rgb(0, 0, 0)">
        <h1 class="display-4" style="color:white">Download Free Images!</h1>
        <hr class="my-4">
      </div>

     <div class = "mt-3" style = "padding-left: 37.5%;">
            <form class="form-inline" action = "/imagesResults" >

              <input class="mr-2 form-control mr-sm-2" type="search" placeholder="Search Images Here" aria-label="Search" name = "imageName" style = "width: 40%; display: inline;">
              <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Search</button>
            </form>
    </div>
    <div class="container">
  <div class="row row-cols-2">
    <%var i = 0;
    for(i = 0; i < ((UNSPimageData.total)/(UNSPimageData.total_pages))%30; i++){ %>
    <div class="col">
    
        
        <div class="card mb-5">
      <img height = "580vh" src = "<%=UNSPimageData.results[i].urls.small%>" class="card-img-top" alt="<%=UNSPimageData.results[i].alt_description%>">
      <div class="card-body">
        <h5 class="card-title"><%=UNSPimageData.results[i].alt_description%></h5>
        <p class="card-text"><%=UNSPimageData.results[i].description%></p>
        <a href="<%=UNSPimageData.results[i].urls.raw%>" class="btn btn-primary">Go to HD Image</a>
        <a href="<%=UNSPimageData.results[i].links.download%>" class="btn btn-primary">Download</a>
      </div>
    </div>



    </div>
<%
 }
 %>
  </div>
</div>

    </body>
</html>